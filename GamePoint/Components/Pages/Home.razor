@page "/"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Http
@using System.Collections.Generic
@using GamePoint.WebAPI.Models
@using GamePointDB.Entity
@using GamePointDB.Data
@rendermode InteractiveServer

<h1>Loja de Jogos</h1>



<div class="search-container">
    <input type="text" @bind-value="SearchTerm" placeholder="Search..." class="search-input">
    <button type="button" class="search-button" @onclick="Search">
        <span class="oi oi-magnifying-glass"></span>
    </button>
</div>


<div>
    <h2><a href="/jogos">Jogos</a></h2>
    <h2><a href="/consolas">Consolas</a></h2>
    <h2><a href="/acessorios">Acessórios</a></h2>
    <h2><a href="/giftcards">Gift Cards</a></h2>
</div>


<h1>GamePoint Dashboard</h1>

<div class="dashboard-section">
    <h2>Jogos</h2>
    @if (jogos.Count > 0)
    {
        @foreach (var jogo in jogos)
        {
            <div class="product-item">
                <img src="@jogo.ImageUrl" alt="@jogo.Name">
                <h3>@jogo.Name</h3>
                <p>@jogo.Description</p>
                <p>Price: @jogo.Price</p>
            </div>
        }
    }
    else
    {
        <p>Sem jogos encontrados.</p>
    }
</div>

