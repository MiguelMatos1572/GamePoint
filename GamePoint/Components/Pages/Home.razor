@code
{
    private async void DeleteProduct(long id)
    {
        var response = await WebApi.DeleteProduct(id);
    }

    private string SearchTerm { get; set; }

    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private void Search()
    {
        OnSearch.InvokeAsync(SearchTerm);
    }
}